<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
  <h2>ユーザー検索"<%= @word %>"</h2>
    <thead>
      <tr>
        <th>画像</th>
        <th>名前</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_image(100, 100) %></td>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <thead>
      <tr>
        <th></th>
        <th>タイトル</th>
        <th>本文</th>

      </tr>
    <tbody>
    <h2>POST検索"<%= @word %>"</h2>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to user_path(post.user) do %>
            <%= image_tag post.user.get_image(100, 100) %>
          <% end %>
        </td>
        <td><%= link_to post.title , post_path(post.id) %></td>
        <td><%= post.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>