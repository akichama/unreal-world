<div class="container">
  <div class="col-md-3 offset-1">
    <h3 class="my-3 bg-light text-center"><strong>投稿一覧</strong></h3>
  </div>
  
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-4 offset-1">
        <% @posts.each do |post| %>
            <div>
              <div>タイトル：<%= post.title %></div>
              <div>本文：<%= post.body %></div>
              <div><%= post.user.name %></div>
              <%= link_to post_path(post.id) do %>
                <div><%= image_tag post.get_image %></div>
              <% end %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>