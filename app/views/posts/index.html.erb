<div class="container">
    <div class="col-md-3 offset-1">
      <h3 class="my-3 bg-light text-center"><strong>投稿一覧</strong></h3>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="d-flex flex-wrap justfy-content-center">
          <% @posts.each do |post| %>
            <%= link_to post_path(post.id) do %>
          <div>
            <%= image_tag post.get_image %>
              <p><%= image_tag item.get_image, size:"150x150" %></p>
              <p>タイトル：<%= post.title %></p>
              <p>本文：<%= post.body %></p>
              <p><%= post.user.name %></p>
           </div>
          <% end %>
        </div>
      </div>
    </div>
</div>