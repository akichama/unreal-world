<div class="col-md-2 offset-1">
  <h3 class="my-3 bg-light text-center"><strong>新規投稿</strong></h3>
</div>

<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post, class: 'col-6 mx-auto' do |f| %>
  <div class="form-group row">
    <%= f.label :title, 'タイトル', class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-9">
      <%= f.text_field :title, class: 'col-form-label' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :body, '本文', class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-9">
      <%= f.text_field :body, class: 'col-form-label' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :image, '画像', class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-9">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>
  <%= f.submit '投稿' %>
<% end %>