<h1>編集</h1>

<% if @post.errors.any? %>
  <%= @post.errors.count %>error
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
  <%= link_to "Show", post_path(@post.id) %>
  <%= link_to "Back", posts_path %>

<% end %>
