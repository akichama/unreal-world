<div class="col-md-2 offset-1">
  <h3 class="my-3 bg-light text-center"><strong>編集</strong></h3>
</div>

<% if @post.errors.any? %>
  <%= @post.errors.count %>error
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post, url: post_path(@post.id), method: :patch, class: 'col-6 mx-auto' do |f| %>
  <div class="row">
    <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">タイトル</label>
      <div class="col-sm-10">
        <!--<input type="title" class="form-control form-control-lg" id="colFormLabelLg" >-->
        <%= f.text_field :title, class: 'form-control' %>
      </div>
  </div>
  <div class="row my-3">
    <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">本文</label>
    <div class="col-sm-10">
      <!--<input type="body" class="form-control form-control-lg" id="colFormLabelLg" >-->
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>
  </div>
  <div class="form-group row">
    <%= f.label :image, '画像', class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-9">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>
  <div class="mx-1 my-1"><%= f.submit "更新", class: 'btn btn-sm btn-success' %></div>
  <div class="mx-1 my-1"><%= link_to '戻る', posts_path, class: "btn btn-sm btn-danger" %></div>
<% end %>