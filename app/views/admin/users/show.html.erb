<div class="col-md-2 offset-1">
  <h3 class="my-3 bg-light text-center">
    <strong>
      <%= @user == current_user ? 'マイページ' : @user.name %>
    </strong>
  </h3>
</div>

<div class="row">
  <div class="col-md-4 offset-1">
    <table class="table table-bordered">
      <tbody>
        <tr class="text-center">
          <th>氏名</th>
          <td><%= @user.name %></td>
          <td><%= image_tag @user.get_image(100,100) %></td>
        </tr>
        <tr>
          <th class="text-center">自己紹介</th>
            <td colspan=2><%= @user.introduction %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="mx-1 my-1"><%= link_to 'このユーザーを退会する', admin_user_path(@post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></div></div>
  <div class="col-md-7">
    <% @user.posts.each do |post| %>
      <div>
        <div class="my-5"><h1><strong><%= link_to post.title, admin_post_path(post) %></strong></h1></div>
        <div class="my-5"><h2><%= post.body %></h2></div>
        <div class="my-5"><%= image_tag post.get_image %>
        <%= link_to 'Delete', admin_post_path(post), data: { confirm: '本当に消しますか？' }, method: :delete %>
      </div>
    <% end %>
  </div>
</div>
