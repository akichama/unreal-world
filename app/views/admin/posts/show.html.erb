<div class="row">
  <div class="offset-2 my-5">
    <div class="d-flex justfy-content-center">
      <div class="mx-5">
        <div>
          <div class="mx-5">
          <div class="mx-5"><h2><%= link_to @user.name, admin_user_path(@user.id) %></h2>
          <div class="my-5"><h1><strong><%= @post.title %></strong></h1></div>
          <div class="my-5"><h2><%= @post.body %></h2></div>
          <div class="my-5"><%= image_tag @post.get_image %>
          <div>
            <div class="my-4">
              コメント件数：<%= @post.post_comments.count %>
            </div>
              <% @post.post_comments.each do |post_comment| %>
                <div><%= image_tag post_comment.user.get_image(100,100) %></div>
                <div><%= post_comment.user.name %></div>
                <div><%= post_comment.created_at.strftime('%Y/%m/%d') %></div>
                <div><%= post_comment.comment %></div>
              <%# if @post_comment.user == current_user %>
                <div class="mt-3"><%= link_to "このコメントを削除する", admin_post_post_comment_path(post_comment.post, post_comment), method: :delete,  data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></div>
              <%# end %>
            <% end %>
          </div>
          <div class="mt-3"><%= link_to 'この記事を削除する', admin_post_path(@post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></div>
        </div>
      </div>
    </div>
  </div>
</div>